<!DOCTYPE html>
<html>
  <head>
    <title>Pairr</title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <% if current_user %>
      <%= link_to "Logout", logout_path %>
    <% else %>
      <%= link_to 'Login', '/auth/github' %>
    <% end %>

    <%= yield %>

  </body>
</html>
