<!DOCTYPE html>
<html>
  <head>
    <title>Pairr</title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <% if flash[:notice] %>
      <div class="notice"><%= flash[:notice] %></div>
    <% end %>

    <%= link_to "Root", root_path, class: "waves-effect waves-light btn" %>

    <% if current_user %>
      <%= link_to "Logout", logout_path, class: "waves-effect waves-light btn red lighten-2" %>
      <p><%= current_user.username %></p>
    <% else %>
      <%= link_to 'Login', '/auth/github', class: "waves-effect waves-light btn" %>
    <% end %>

    <%= yield %>

  </body>
</html>
